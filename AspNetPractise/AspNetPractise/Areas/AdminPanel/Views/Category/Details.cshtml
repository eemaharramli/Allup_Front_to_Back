@model Category

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="main-panel">
    <div class="content-wrapper">
      <div class="col-lg-12 stretch-card grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">@Model.Name Info</h4>
            <table class="table table-bordered">
              <thead>
              <tr>
                <th> Category Name </th>
                <th> Is Main </th>
                <th>Children: </th>
              </tr>
              </thead>
              <tbody>
              <tr class="table-info">
                <td> @Model.Name </td>
                <td> @Html.Raw(Model.IsMain) </td>
                <th>
                  <ul>
                    @foreach (var item in Model.Children)
                    {
                      <li>@item.Children</li>
                    }
                  </ul>
                </th>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</div>